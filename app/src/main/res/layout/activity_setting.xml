<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00adef"
    tools:context=".setting">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="406dp"
        android:layout_height="98dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.137">


        <TextView
            android:id="@+id/attempt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="attempt"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="196dp" />

        <RadioGroup
            android:id="@+id/radiogroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton24"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="4" />

            <RadioButton
                android:id="@+id/radioButton23"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="6" />

            <RadioButton
                android:id="@+id/radioButton22"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="10" />

            <RadioButton
                android:id="@+id/radioButton21"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="20" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="406dp"
        android:layout_height="98dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1">


        <TextView
            android:id="@+id/gnl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="guessed number lenth"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="196dp" />

        <RadioGroup
            android:id="@+id/radiogroup3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="301dp">

            <RadioButton
                android:id="@+id/radioButton34"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="4" />

            <RadioButton
                android:id="@+id/radioButton33"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="5" />

            <RadioButton
                android:id="@+id/radioButton32"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="6" />

            <RadioButton
                android:id="@+id/radioButton31"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="9" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="414dp"
        android:layout_height="584dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="time(minute)"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="196dp" />

        <RadioGroup
            android:id="@+id/radiogroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="3" />

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="4" />
        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/save"
        android:layout_width="175dp"
        android:layout_height="73dp"
        android:text="save"
        android:textSize="40dp"
        app:backgroundTint="#FF9800"
        app:layout_constraintBottom_toTopOf="@+id/Daccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Daccount"
        android:layout_width="423dp"
        android:layout_height="114dp"
        android:layout_marginBottom="4dp"
        android:text="Delete account"
        android:textSize="40dp"
        app:backgroundTint="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>